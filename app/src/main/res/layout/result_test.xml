<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3">

        <ProgressBar
            android:id="@+id/pbarYanlisYanit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentTop="true"
            android:indeterminate="false"
            android:max="20"
            android:progress="8"
            android:progressDrawable="@drawable/custom_progressbar_yanlis"
            android:secondaryProgress="0" />


        <TextView
            android:id="@+id/tvYanlisSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="8 yanlış "
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp">

        <ProgressBar
            android:id="@+id/pbarDogruYanit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:indeterminate="false"
            android:max="20"
            android:progress="12"
            android:progressDrawable="@drawable/custom_progressbar_dogru"
            android:secondaryProgress="0" />


        <TextView
            android:id="@+id/tvDogruSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="12 doğru"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout">

        <ProgressBar
            android:id="@+id/pbarBasarimOrani"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="5"
            android:progressDrawable="@drawable/custom_progressbar_basarim"
            android:secondaryProgress="0" />


        <TextView
            android:id="@+id/txtBasarimOrani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="%60 başarılısın"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </RelativeLayout>

    <Button
        android:id="@+id/btnAllResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradientbg"
        android:text="@string/allresult"
        android:layout_margin="10dp"
        android:textAllCaps="true"
        android:textColor="@color/beyaz" />
</RelativeLayout>