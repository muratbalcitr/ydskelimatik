<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <Button
        android:id="@+id/btnSoruPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioButtonA"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/gelenkelime"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/radioButtonA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioButtonB"
        android:layout_alignEnd="@+id/radioButtonB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/radioButtonB"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/gelencevaplar"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/radioButtonB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioButtonC"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/gelencevaplar"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/radioButtonC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioButtonD"
        android:layout_alignEnd="@+id/radioButtonB"
        android:layout_alignLeft="@+id/radioButtonB"
        android:layout_alignRight="@+id/radioButtonB"
        android:layout_alignStart="@+id/radioButtonB"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gelencevaplar"
        android:textStyle="normal|bold" />


    <Button
        android:id="@+id/radioButtonD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioButtonC"
        android:layout_alignLeft="@+id/radioButtonC"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radioButtonC"
        android:layout_alignStart="@+id/radioButtonC"
        android:layout_marginBottom="40dp"
        android:background="@drawable/gelencevaplar"
        android:textStyle="normal|bold" />


</RelativeLayout>
