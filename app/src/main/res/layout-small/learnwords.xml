<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayoutstart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="3"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/llkelime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/tvKelime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="fill_vertical"
                    android:layout_weight="0.5"
                    android:background="@color/buttonregister"
                    android:gravity="center"
                    android:text="@string/kelimeler"
                    android:textAllCaps="true"
                    android:textColor="@android:color/background_light"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/tvAnlamlari"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@color/gelenkelimestart"
                    android:text="@string/anlamlari"
                    android:textColor="@android:color/background_light"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnTekrar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp"
                    android:background="@color/ileri"
                    android:text="@string/ogrenmedim" />

                <Button
                    android:id="@+id/btnOgrendim"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/learned"
                    android:text="@string/ogrendim" />
            </LinearLayout>

            <Button
                android:id="@+id/btnTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/test"
                android:text="@string/teste_gec" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

